#!/bin/bash
# Executes validation TESTS using OSPC taxcalc SimpleTaxIO class that involve:
# (1) generating a random sample of tax filing units (INPUT),
# (2) generating OUTPUT from INPUT using using simtax.py, and
# (3) generating tax-difference statistics by comparing OUTPUT with
#     output file generated by Internet TAXSIM using the same INPUT.
if [ "$#" -gt 1 ]; then
    echo "ERROR: must use at most one command-line argument '--mtr'"
    exit 1
fi
if [ "$#" -eq 0 ]; then
    X=""
else
    if [ "$1" == "--mtr" ]; then
        X="$1"
    else
        echo "ERROR: optional command-line argument '$1' is not '--mtr'"
        exit 1
    fi
fi
clear
echo "Validation tests using SimpleTaxIO class of OSPC taxcalc package"
for LYY in a13 a14 b13 b14 c13 c14
do
    echo "`date` : $LYY"
    L=${LYY:0:1}    
    YY=${LYY:1:2}
    tclsh make-in.tcl 20$YY $L > $LYY.in
    python ../../simtax.py $LYY.in
    unzip -oq out-taxsim.zip $LYY.in.out-taxsim
    tclsh taxdiffs.tcl $X $LYY.in.out-simtax $LYY.in.out-taxsim > $LYY.taxdiffs
    git diff --name-status $LYY.taxdiffs
    rm $LYY.in $LYY.in.out-simtax $LYY.in.out-taxsim
done
echo "`date`"
exit 0
