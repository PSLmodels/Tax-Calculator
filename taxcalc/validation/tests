#!/bin/bash
# Executes validation TESTS using OSPC taxcalc SimpleTaxIO class that involve:
# (1) generating a random sample of tax filing units (INPUT),
# (2) generating OUTPUT from INPUT using simtax.py, and
# (3) generating tax-difference tabulations by comparing OUTPUT with
#     output file generated by Internet TAXSIM using the same INPUT.
# .... check number of command-line arguments
if [[ "$#" -gt 0 ]]; then
    echo "ERROR: no command-line arguments allowed"
    exit 1
fi
# .... specify simtax.py options appropriate for validation tests
OPTIONS="--taxsim2441"
# .... execute validation tests
clear
echo "Validation tests using OSPC Tax-Calculator SimpleTaxIO class"
echo "(the tests compare OSPC and Internet TAXSIM results)"
for LYY in a13 a14 b13 b14 c13 c14
do
    echo "`date` : $LYY"
    L=${LYY:0:1}    
    YY=${LYY:1:2}
    tclsh make-in.tcl 20$YY $L > $LYY.in
    python ../../simtax.py $OPTIONS $LYY.in
    unzip -oq out-taxsim.zip $LYY.in.out-taxsim
    tclsh taxdiffs.tcl $X $LYY.in.out-simtax $LYY.in.out-taxsim > $LYY.taxdiffs
    git diff --name-status $LYY.taxdiffs
    rm $LYY.in $LYY.in.out-simtax $LYY.in.out-taxsim
done
echo "`date`"
exit 0
